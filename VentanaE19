    private void limpiarActionPerformed(java.awt.event.ActionEvent evt) {                                        
     txtaltura.setText("");
     txtarea.setText("");
     txtlado.setText("");
     txtperimetro.setText("");
    }                                       

    private void calcularActionPerformed(java.awt.event.ActionEvent evt) {                                         
        double lado;
        try{
        lado = Double.parseDouble(txtlado.getText());
        txtperimetro.setText(String.valueOf(Triangulo.perimetro_t(lado)));
        txtaltura.setText(String.valueOf(Triangulo.altura_t(lado)));
        txtarea.setText(String.valueOf(Triangulo.area_t(lado)));
        }catch (NumberFormatException e){
           JOptionPane.showMessageDialog(null, "No se pueden usar letras, revise y vuelva a intentar.");
    }                                        
    }
    
