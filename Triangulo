package ejer19C3;
public class Triangulo {
    public static double perimetro_t(double lado){
        double perimetro = lado*3; 
        return perimetro;
    } 
    public static double altura_t(double lado){
        double altura = (lado*Math.sqrt(3))/2; 
        return altura;
    } 
    public static double area_t(double lado){
        double area = ((lado*lado)*Math.sqrt(3))/4; 
        return area;
    }
}
